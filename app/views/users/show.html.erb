<div class="w-full">
    <% if @user.id == Current.user.id %>
        <h2 class="text-center text-3xl">Your Profile</h2>
    <% end %>

    <div class="mt-20 w-full flex flex-col items-center">
        <%= image_tag "pfp.jpg", class: "w-36 rounded-full border-black border-1" %>
        
        <div class="mt-5 flex flex-col items-center">
            <span class="text-6xl"><%= @user.username %></span>
            <span class="text-gray-400"><%= @user.email_address %></span>
        </div>
    </div>

    <div class="w-full mt-24 flex items-center justify-around">
        <%= link_to "Edit", edit_user_path(@user), class: "w-34 h-14 bg-[#0088DD] hover:bg-[#0088FF] rounded-2xl text-2xl text-white flex justify-center items-center" %>
        <%= button_to "Delete", @user, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this user?" }, class: "w-34 h-14 bg-red-600 hover:bg-red-700 rounded-2xl text-2xl text-white cursor-pointer" %>
    </div>
</div>